@using StudentSystemMvc.Models.EntityFramework
@model List<Tbl_Students>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>STUDENT ID</th>
        <th>NAME</th>
        <th>SURNAME</th>
        <th>GENDER</th>
        <th>CLUB</th>
        <th>TRANSACTIONS</th>
    </tr>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>
                <td>@std.StudentID</td>
                <td>@std.StuName</td>
                <td>@std.StuSurname</td>
                <td>@std.StuGender</td>
                <td>@std.StuClub</td>
                <td><a href="/Students/Delete/@std.StudentID" class="btn btn-danger">DELETE</a>
                <a href="/Students/GetStudent/@std.StudentID" class="btn btn-warning" style="margin-left:15px">UPDATE</a></td>
            </tr>
        }

    </tbody>
</table>

<a href="/Students/AddStudent" class="btn btn-primary">Add new student</a>

