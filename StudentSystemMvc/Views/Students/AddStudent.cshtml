@model StudentSystemMvc.Models.EntityFramework.Tbl_Students
@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Student Name</label>
        <input type="text" class="form-control" name="StuName" />
    </div>

    <div style="margin-top:10px">
        <label>Surname</label>
        <input type="text" class="form-control" name="StuSurname" />
    </div>

    <div style="margin-top:10px">
        <label>Photo</label>
        <input type="text" class="form-control" name="StuImage" />
    </div>

    <div style="margin-top:10px">
        <label>Gender</label>
        <input type="text" class="form-control" name="StuGender" />

    </div>

    <div style="margin-top:10px">
        <label>Club</label>
        @Html.DropDownListFor(m => m.Tbl_Clubs.ClubID, (List<SelectListItem>)ViewBag.vl, new { @class = "form-control" })
    </div>



    <div style="margin-top:10px">

    </div>

    <div style="margin-top:10px">
        <button class="btn btn-primary">Add Student</button>
    </div>
</form>

